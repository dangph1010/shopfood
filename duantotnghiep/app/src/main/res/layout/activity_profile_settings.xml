<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/img_5"
            android:layout_margin="20dp"/>
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tolbar"
            app:titleMarginStart="80dp"
            app:title="Profile Settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FULL NAME"
        android:textSize="12sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="16dp"/>

    <EditText
        android:id="@+id/edtFullnameProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMAIL ADDRESS"
        android:textSize="12sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="16dp"/>

    <EditText
        android:id="@+id/edtEmailProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PHONE NUMBER"
        android:textSize="12sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="16dp"/>

    <EditText
        android:id="@+id/edtPhoneProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="16sp"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADDRESS"
        android:textSize="12sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="16dp"/>

    <EditText
        android:id="@+id/edtAddressProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text=""
        android:textSize="16sp"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DAY OF BIRTH"
        android:textSize="12sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="16dp"/>

    <EditText
        android:id="@+id/edtBirthdayProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:textSize="16sp"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"/>


    <Button
        android:id="@+id/btnChangeProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF9900"
        android:text="change settings"
        android:textSize="12sp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="30dp"/>
</LinearLayout>