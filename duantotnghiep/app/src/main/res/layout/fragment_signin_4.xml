<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="47dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/text_color"
            android:text="Enter your Name, Email and Password"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/text_color"
                android:text="for sign up. "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvAlreadySignup"
                android:textSize="16dp"
                android:textColor="@color/orange"
                android:text="Already have account?"/>
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/etUserNameRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Username"
        android:textSize="16dp"
        android:textColorHint="@color/text_color"
        android:textColor="@color/text_color"
        android:layout_marginTop="34dp"
        android:layout_marginHorizontal="43dp"
        android:paddingHorizontal="18dp"
        android:background="@drawable/edt_shape"
        android:backgroundTint="@color/edt_background"
        />
    <EditText
        android:id="@+id/etFullNameRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Full name"
        android:textSize="16dp"
        android:textColorHint="@color/text_color"
        android:textColor="@color/text_color"
        android:layout_marginTop="14dp"
        android:layout_marginHorizontal="43dp"
        android:paddingHorizontal="18dp"
        android:background="@drawable/edt_shape"
        android:backgroundTint="@color/edt_background"
        />

    <EditText
        android:id="@+id/etEmailRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Email"
        android:textSize="16dp"
        android:textColorHint="@color/text_color"
        android:textColor="@color/text_color"
        android:layout_marginTop="14dp"
        android:layout_marginHorizontal="43dp"
        android:paddingHorizontal="18dp"
        android:background="@drawable/edt_shape"
        android:backgroundTint="@color/edt_background"
        />

    <EditText
        android:id="@+id/etPasswordRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@color/text_color"
        android:textColor="@color/text_color"
        android:textSize="16dp"
        android:layout_marginTop="14dp"
        android:layout_marginHorizontal="43dp"
        android:drawableRight="@drawable/eye"
        android:paddingHorizontal="18dp"
        android:background="@drawable/edt_shape"
        android:backgroundTint="@color/edt_background"
        />
    <EditText
        android:id="@+id/etConfirmPassRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColorHint="@color/text_color"
        android:textColor="@color/text_color"
        android:textSize="16dp"
        android:layout_marginTop="14dp"
        android:layout_marginHorizontal="43dp"
        android:drawableRight="@drawable/eye"
        android:paddingHorizontal="18dp"
        android:background="@drawable/edt_shape"
        android:backgroundTint="@color/edt_background"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/orange"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="43dp"
        android:text="Sign up"
        android:textColor="@color/white"
        android:background="@drawable/login_btn_shape"
        />

</LinearLayout>