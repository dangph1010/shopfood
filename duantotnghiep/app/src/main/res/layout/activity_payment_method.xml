<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".UI.Activity.PaymentMethodActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBackPayment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/img_5"
            android:layout_margin="20dp"/>
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tolbar"
            app:titleMarginStart="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            app:title="Payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        >
        <TextView
            android:layout_marginVertical="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/blackhoidam"
            android:textSize="15dp"
            android:text="Add a payment method"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp">
            <ImageView
                android:layout_marginTop="2dp"
                android:src="@drawable/creditcard"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="@color/blackhoidam"
                    android:text="Credit or debit card"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visa, Mastercard, AMEX, JCB"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddCreditCard"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:backgroundTint="@color/backgroundxanh"
                android:text="Add"
                android:textStyle="normal|bold"
                android:textColor="@color/chuxanh"
                android:background="@drawable/payment_btn_shape"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="5dp"

                />

        </LinearLayout>
        <View
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height= "1dp"
            android:background="@color/xamnhe" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="7dp"
                android:backgroundTint="#a50164">
                <ImageView
                    android:src="@drawable/momocredit"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    android:padding="3dp"
                    />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="@color/blackhoidam"
                    android:text="Momo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credit Momo"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddCreditMomo"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:backgroundTint="@color/backgroundxanh"
                android:layout_marginLeft="135dp"
                android:layout_marginTop="5dp"
                android:text="Add"
                android:textStyle="normal|bold"
                android:textColor="@color/chuxanh"
                android:background="@drawable/payment_btn_shape"
                />
        </LinearLayout>
        <View
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height= "1dp"
            android:background="@color/xamnhe" />

    </LinearLayout>
    <TextView
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/blackhoidam"
        android:textSize="15dp"
        android:text="Other payment methods"
        />
    <LinearLayout
        android:layout_marginHorizontal="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp">
        <ImageView
            android:src="@drawable/wallet"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />
        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textColor="@color/blackhoidam"
                android:text="Cash"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay faster when ready"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/btnCash"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_circle"/>
    </LinearLayout>


</LinearLayout>

