<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/ivImgPayItem"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_food" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvQuantityPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/ivImgPayItem"
                android:background="@drawable/border_text"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/vangchinh"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNameItemPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/tvQuantityPay"
                android:text="Hamburger"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tvPriceItemPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="50dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>