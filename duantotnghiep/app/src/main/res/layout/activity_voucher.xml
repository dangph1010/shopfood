<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".UI.Activity.PaymentMethodActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBackVoucher"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/img_5"
            android:layout_margin="20dp"/>
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tolbar"
            app:titleMarginStart="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            app:title="Voucher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <EditText
            android:id="@+id/etVoucherCode"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginRight="7dp"
            android:background="@drawable/edt_shape"
            android:backgroundTint="@color/edt_background"
            android:drawableRight="@drawable/voucher2"
            android:hint="Enter voucher code "
            android:paddingHorizontal="12dp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color"
            android:textSize="17sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAccept"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/voucher_btn_shape"
            android:backgroundTint="@color/orange"
            android:text="Apply"
            android:textColor="@color/white" />
    </LinearLayout>
    <View
        android:layout_marginVertical="7dp"
        android:id="@+id/SplitLine_hor1"
        android:layout_width="match_parent"
        android:layout_height= "1dp"
        android:background="@color/xamnhe" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discount code "
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:textColor="@color/blackhoidam"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Only 1 voucher can be selected "
        />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            app:cardCornerRadius="6dp">

            <ImageView
                android:id="@+id/imgVoucher"
                android:layout_width="100dp"
                android:layout_height="80dp"

                android:scaleType="centerCrop"
                android:src="@drawable/voucher3" />
            <!--        android:paddingHorizontal="10dp"-->
            <!--        android:paddingVertical="20dp"-->
        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp">

            <TextView
                android:id="@+id/tvDateVoucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitleVoucher"
                android:layout_marginTop="12dp"
                android:text="Expiry: 12-12-2022"
                android:textAlignment="textStart"
                android:textColor="@color/text_color"
                android:textSize="13dp" />


            <TextView
                android:id="@+id/tvTitleVoucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30% discount voucher"
                android:textColor="@color/blackhoidam"
                android:textSize="18dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/btnCashVoucher"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_circle"/>


    </LinearLayout>



</LinearLayout>