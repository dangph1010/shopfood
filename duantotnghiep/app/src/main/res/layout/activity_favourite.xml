<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Activity.FavouriteActivity"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tvfavourite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="My Favourite"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />
    <View
        android:id="@+id/linefavourite"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#958B8E"
        android:layout_below="@+id/tvfavourite"
        android:layout_marginTop="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcFavourite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvfavourite"

        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp" />

    <RelativeLayout
        android:id="@+id/rltFavourite"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:background="@drawable/imgfavourite" />

        <TextView
            android:id="@+id/tvTextCard1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivEmpty"
            android:layout_centerInParent="true"
            android:text="My Favourite"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTextCard1"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="Please choose your favorite food first !"
            android:textColor="@color/black"
            android:textSize="17sp" />

    </RelativeLayout>

</RelativeLayout>